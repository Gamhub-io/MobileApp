<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    xmlns:popups="clr-namespace:GamHubApp.Views" 
    xmlns:vm="clr-namespace:GamHubApp.ViewModels" 
    x:DataType="vm:GiveawayEntryQuestionViewModel"
    x:Class="GamHubApp.Views.GiveawayEntryQuestionPopUp"
    BackgroundColor="Transparent">
    <Border
           VerticalOptions="Center" 
           HorizontalOptions="Center"
           HeightRequest="290"
           WidthRequest="280"
           StrokeShape="RoundRectangle 20">
        <Border.Background>
            <LinearGradientBrush StartPoint="0,0"
                                 EndPoint="1,1">
                <GradientStop Color="#262626"
                           Offset="0.1"/>
                <GradientStop Color="{StaticResource Dark}"
                           Offset="0.75"/>
                <GradientStop Color="#0d0d0d"
                           Offset="0.65"/>
            </LinearGradientBrush>
        </Border.Background>

        <StackLayout Spacing="20"
                    VerticalOptions="Center">

            <Label Text="Enter Giveaway"
                   FontSize="25"
                   HorizontalOptions="Center"
                   HorizontalTextAlignment="Center"
                   Margin="5,0"
                   TextColor="{StaticResource FontColor}"
                   FontFamily="P-Bold"/>
            <Label 
                   FontSize="20"
                   HorizontalOptions="Center"
                   HorizontalTextAlignment="Center"
                   Margin="5,0"
                   TextColor="{StaticResource FontColor}"
                   FontFamily="P-SemiBold">
                <Label.FormattedText>
                    <FormattedString>
                        <Span Text="Would you like to enter this giveaway? cost "/>
                        <Span Text="&#xf3a5;" 
                              FontFamily="FaSolid"
                              TextColor="{DynamicResource DiscountColor}"/>
                        <Span Text="{Binding GemAmount}"
                              FontFamily="P-Bold"/>
                    </FormattedString>
                </Label.FormattedText>
            </Label>
            <Grid ColumnDefinitions="*,*"
                  Grid.Row="2">
                <Button Text="Yes"
                        BackgroundColor="{DynamicResource DarkPrimary}"
                        TextColor="{DynamicResource FontColor}"
                        Grid.Column="1"
                        FontFamily="P-Bold"
                        FontSize="20"
                        Padding="1"
                        HeightRequest="50"
                        WidthRequest="100"
                        HorizontalOptions="Center"
                        VerticalOptions="Center"
                        CornerRadius="12"
                        Clicked="Primary_Clicked"/>
                <Button Text="No"
                        BackgroundColor="{DynamicResource BackgroundColor}"
                        TextColor="{DynamicResource FontColor}"
                        Grid.Column="0"
                        FontFamily="P-Bold"
                        FontSize="20"
                        Padding="1"
                        HeightRequest="50"
                        WidthRequest="100"
                        HorizontalOptions="Center"
                        VerticalOptions="Center"
                        CornerRadius="12"
                        Clicked="Secondary_Clicked"/>
                
            </Grid>
        </StackLayout>

    </Border>
</toolkit:Popup>