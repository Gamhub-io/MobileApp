<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:xct="http://xamarin.com/schemas/2020/toolkit"
             x:Class="AresNews.Views.AboutPage">
    <Shell.TitleView>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="{StaticResource TitleRightMargin}"/>

            </Grid.ColumnDefinitions>

            <Label Text="About"
                   Grid.Column="1"
                   FontSize="30"
                   VerticalOptions="Center"
                   TextColor="{StaticResource FontColor}"
                   FontFamily="P-Bold"/>
        </Grid>

    </Shell.TitleView>
    <ContentPage.Resources>
        <!-- Style of the title -->
        <Style x:Key="TitleStyle"
               TargetType="Label">
            <Setter Property="HorizontalOptions" Value="Center" />
            <Setter Property="Margin" Value="0,20,0,0" />
            <Setter Property="FontFamily" Value="P-Bold" />
            <Setter Property="FontSize" Value="23" />
            <Setter Property="TextColor" Value="{StaticResource FontColor}" />
        </Style>
        
        <!-- Separator -->
        <Style x:Key="SeparatorStyle" 
               TargetType="BoxView">
            <Setter Property="BackgroundColor" Value="{StaticResource FontColor}" />
            <Setter Property="Margin" Value="20,0" />
            <Setter Property="HorizontalOptions" Value="Fill" />
            <Setter Property="HeightRequest" Value="1" />
            <Setter Property="Opacity" Value="0.1" />
        </Style>
        
        <!-- Paragraph -->
        <Style x:Key="ParagraphStyle"
               TargetType="Label">
            <Setter Property="HorizontalOptions" Value="Center"/>
            <Setter Property="HorizontalTextAlignment" Value="Center"/>
            <Setter Property="WidthRequest" Value="350" />
            <Setter Property="FontFamily" Value="P-Regular" />
            <Setter Property="FontSize" Value="15" />
            <Setter Property="TextColor" Value="{StaticResource FontColor}" />
        </Style>
    </ContentPage.Resources>
    <ContentPage.Content>
        <Grid>
            <Grid.RowDefinitions>
                <!-- Image -->
                <RowDefinition Height="100"/>
                <!-- Description -->
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <!-- Economic model -->
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <!-- Creator -->
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>
            <Grid.Background>
                <LinearGradientBrush StartPoint="0,0"
                             EndPoint="1,1">
                    <GradientStop Color="#262626"
                           Offset="0.1"/>
                    <GradientStop Color="{StaticResource Dark}"
                           Offset="0.75"/>
                    <GradientStop Color="#0d0d0d"
                           Offset="65.0"/>
                    <GradientStop Color="Black"
                           Offset="1.0"/>
                </LinearGradientBrush>
            </Grid.Background>
            <!-- Image -->
            <Image Source="AresLogo"
                   VerticalOptions="Center"
                   Grid.Row="0"
                   Aspect="AspectFit"/>

            <!-- Description --> 
            <Label Text="Project description"
                   Grid.Row="1"
                   Style="{StaticResource TitleStyle}" />
            <BoxView Grid.Row="2"
                     Style="{StaticResource SeparatorStyle}"/>
            <Label Text="The purpose of AresGaming is to keep gamers 
up-to-date on everything game-related, for free, 
with no ads or any other type of annoyance. &#10; &#10;

As the app is open-source, the app evolve using
its community's skills, knowledges and opinions.  "
                   Grid.Row="3"
                   Style="{StaticResource ParagraphStyle}"/>
            
            <!-- Profit -->
            <Label Text="How is it profitable?"
                   Grid.Row="4"
                   Style="{StaticResource TitleStyle}" />
            <BoxView Grid.Row="5"
                     Style="{StaticResource SeparatorStyle}"/>
            <Label Text="It's not."
                   Grid.Row="6"
                   Style="{StaticResource ParagraphStyle}"/>

            <!-- Creator -->
            <Label Text="Founder"
                   Grid.Row="7"
                   Style="{StaticResource TitleStyle}" 
                   />

            <BoxView Grid.Row="8"
                     Style="{StaticResource SeparatorStyle}"/>
            
            <!-- Card creator -->
            <Frame Grid.Row="9"
                   BackgroundColor="{StaticResource LightDark}"
                   CornerRadius="15"
                   WidthRequest="265"
                   HeightRequest="108"
                   Margin="0,20,0,0"
                   HorizontalOptions="Center"
                   Padding="0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="100"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Profile pic -->
                    <xct:AvatarView Grid.Column="0" 
                                    HorizontalOptions="CenterAndExpand"
                                    VerticalOptions="CenterAndExpand"
                                    Color="{DynamicResource Dark}"
                                    Text=""
                                    Size="70"
                                    Source="https://pbs.twimg.com/profile_images/1067126620476055553/x6K-88A8.jpg" />

                    <Grid Grid.Column="1"
                          Margin="0,20,0,0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                        </Grid.RowDefinitions>
                        
                        <!-- Name -->
                        <Label Text="Bryce Friha"
                               FontSize="18"
                               Grid.Row="0"
                               FontFamily="P-Bold"
                               TextColor="{StaticResource FontColor}"
                               VerticalOptions="Center"/>

                        <!-- Twitter -->
                        <StackLayout Orientation="Horizontal"
                                     Grid.Row="1">
                            <!-- Twitter logo -->
                            <Label Text="&#xf099;"
                                   FontSize="15"
                                   FontFamily="FaBrand"
                                   TextColor="#1DA1F2"
                                   VerticalOptions="Center"/>
                            
                            <!-- Name -->
                            <Label Text="@BriceFriha"
                                   FontSize="14"
                                   FontFamily="P-Bold"
                                   VerticalOptions="Center"
                                   TextColor="{StaticResource FontColor}"/>
                        </StackLayout>
                    </Grid>
                    
                </Grid>
            </Frame>

        </Grid>
    </ContentPage.Content>
</ContentPage>